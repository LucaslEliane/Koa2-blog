include ./header.pug

.ui.grid
    .four.wide.column
    .eight.wide.column
        form.ui.form.segement(method="post" enctype="multipart/form-data" action="/signup")
            .field.required
                label 用户名
                input(placeholder="用户名" type="text" name="name")
            .field.required
                label 密码
                input(placeholder="密码" type="password" name="password")
            .field.required
                label 重复密码
                input(placeholder="重复密码" type="password" name="repassword")
            .field.required
                label 性别
                select.ui.compact.selection.dropdown(name="gender")
                    option(value="m") 男
                    option(value="f") 女
                    option(value="x") 保密
            .field.required
                label 头像
                input(type="file" name="avatar")
            .field.required
                label 个人简介
                textarea(name="bio" rows="5" v-model="user.bio")
            input.ui.button.fluid(type="submit" value="注册")